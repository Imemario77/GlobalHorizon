<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/admin.css" />
    <title>Admin Dashboard</title>
  </head>
  <body>
    <div class="header-dash">
      <h1 style="padding-left: 30px">Admin Dashboard</h1>
      <div style="padding-right: 30px">
        <a
          href="/"
          style="margin-right: 30px; text-decoration: none; font-size: large"
          >Home</a
        >
        <button class="btn btn-primary button">
          <i class="fas fa-plus"></i> Add New Tracking
        </button>
      </div>
    </div>
    <form action="/admin/order" method="POST">
      <div class="my-prefix-container">
        <div class="my-prefix-column">
          <h2>Sender Details</h2>
          <section>
            <label for="senderName">Name:</label>
            <input type="text" id="senderName" name="senderName" required />

            <label for="senderEmail">Email:</label>
            <input type="email" id="senderEmail" name="senderEmail" required />

            <label for="senderAddress">Address:</label>
            <input
              type="text"
              id="senderAddress"
              name="senderAddress"
              required
            />
          </section>
          <h2>Parcel Details</h2>
          <section>
            <label for="parcelHeight">Height (cm):</label>
            <input
              type="number"
              id="parcelHeight"
              name="parcelHeight"
              required
            />

            <label for="parcelWidth">Width (cm):</label>
            <input type="number" id="parcelWidth" name="parcelWidth" required />

            <label for="parcelLength">Length (cm):</label>
            <input
              type="number"
              id="parcelLength"
              name="parcelLength"
              required
            />

            <label for="parcelWeight">Weight (kg):</label>
            <input
              type="number"
              id="parcelWeight"
              name="parcelWeight"
              required
            />
          </section>
        </div>
        <div class="my-prefix-column">
          <h2>Recipient Details</h2>
          <section>
            <label for="recipientName">Name:</label>
            <input
              type="text"
              id="recipientName"
              name="recipientName"
              required
            />

            <label for="recipientEmail">Email:</label>
            <input
              type="email"
              id="recipientEmail"
              name="recipientEmail"
              required
            />

            <label for="recipientAddress">Address:</label>
            <input
              type="text"
              id="recipientAddress"
              name="recipientAddress"
              required
            />
            <label for="productType">Product Type:</label>
            <input
              type="text"
              id="productType"
              name="item"
              placeholder="Product Type"
              required
            />

            <label for="shippingAddress">Shipping Office:</label>
            <input
              type="text"
              id="shippingAddress"
              name="shipping_address"
              placeholder="Shipping office"
              required
            />

            <label for="status">Status:</label>
            <input
              type="text"
              id="status"
              name="status"
              placeholder="Status"
              value=""
              required
            />
          </section>
        </div>
      </div>
      <button class="btn btn-primary button Upload-tracking">
        Upload Information
      </button>
    </form>
  </body>
</html>
