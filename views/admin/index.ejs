<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/css/admin.css" />
    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon" />

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=Roboto:wght@500;700&display=swap"
      rel="stylesheet"
    />

    <!-- Icon Font Stylesheet -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css"
      rel="stylesheet"
    />

    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css"
      rel="stylesheet"
    />

    <!-- Libraries Stylesheet -->
    <link href="lib/animate/animate.min.css" rel="stylesheet" />
    <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="css/bootstrap.min.css" rel="stylesheet" />
  </head>
  <body>
    <div class="dashboard">
      <div class="header-dash">
        <h1>Admin Dashboard</h1>
        <div>
          <a
            href="/"
            style="margin-right: 30px; text-decoration: none; font-size: large"
            >Home</a
          >
          <button class="btn btn-primary button">
            <i class="fas fa-plus"></i> Add New Tracking
          </button>
        </div>
      </div>
      <table>
        <thead>
          <tr>
            <th>Tracking ID</th>
            <th>User Email</th>
            <th>Product Type</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (error === null) { %> <% if (orders.length > 0) { %> <%
          orders.forEach(order => { %>
          <tr>
            <td><%= order.id %></td>
            <td><%= order.email%></td>
            <td><%= order.item %></td>
            <td><%= order.status || 'Pending' %></td>
            <td>
              <div class="action-btn-con">
                <a href="/admin/order/<%= order.id %>" class="act-btn-holder">
                  <i class="fas fa-eye action-btn view"></i>
                </a>
                <form
                  action="/admin/order/delete"
                  onsubmit="return confirmDelete();"
                  method="post"
                >
                  <input type="hidden" name="order" value="<%= order.id %>" />
                  <button class="act-btn-holder">
                    <i class="fas fa-trash action-btn del"></i>
                  </button>
                </form>
              </div>
            </td>
          </tr>

          <% }); %> <% } else { %>
          <tr>
            <td colspan="5">There currently is nothing to track</td>
          </tr>
          <% } %> <% } else { %>
          <tr>
            <td colspan="5"><%= error %></td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
    <div class="admin-modal" id="orderModal">
      <div class="modal-content">
        <button class="close-btn" onclick="closeModal()">&times;</button>
        <h2>Add New Order</h2>
        <form action="/admin/order" method="POST">
          <input type="email" name="email" placeholder="User Email" required />
          <input type="text" name="item" placeholder="Product Type" required />
          <input
            type="text"
            name="shipping_address"
            placeholder="Shipping address"
            required
          />
          <input
            type="text"
            name="status"
            placeholder="status"
            value=""
            required
          />
          <button type="submit" class="btn btn-primary button">Submit</button>
        </form>
      </div>
    </div>

    <script>
      const orderModal = document.getElementById("orderModal");

      document.querySelector(".btn-primary").onclick = function () {
        orderModal.style.display = "flex"; // Show modal
      };

      function closeModal() {
        orderModal.style.display = "none"; // Hide modal
      }

      // Optional: Close modal when clicking outside the modal content
      window.onclick = function (event) {
        if (event.target === orderModal) {
          closeModal();
        }
      };
    </script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
    <script>
      $(document).ready(function () {
        $("#shipment-status").select2({
          placeholder: "Select Shipment Status",
          allowClear: true,
        });
      });

      function confirmDelete() {
        return confirm("Are you sure you want to delete this order?");
      }
    </script>
  </body>
</html>
