<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/css/admin.css" />
    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon" />

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=Roboto:wght@500;700&display=swap"
      rel="stylesheet"
    />

    <!-- Icon Font Stylesheet -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css"
      rel="stylesheet"
    />

    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css"
      rel="stylesheet"
    />

    <!-- Libraries Stylesheet -->
    <link href="lib/animate/animate.min.css" rel="stylesheet" />
    <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="css/bootstrap.min.css" rel="stylesheet" />
  </head>
  <body>
    <div class="dashboard">
      <div class="header-dash">
        <h1>Admin Dashboard</h1>
        <button class="btn btn-primary">
          <i class="fas fa-plus"></i> Add New Order
        </button>
      </div>
      <table>
        <thead>
          <tr>
            <th>Order ID</th>
            <th>User Email</th>
            <th>Product Type</th>
            <th>Quantity</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% if (error === null) { %> <% if (orders.length > 0) { %> <%
          orders.forEach(order => { %>
          <tr>
            <td><%= order.id %></td>
            <td><%= order.user_id %></td>
            <td><%= order.product_id %></td>
            <td><%= order.quantity %></td>
            <td><%= order.status || 'Pending' %></td>
          </tr>
          <% }); %> <% } else { %>
          <tr>
            <td colspan="5">There currently is no order</td>
          </tr>
          <% } %> <% } else { %>
          <tr>
            <td colspan="5"><%= error %></td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
    <div class="admin-modal" id="orderModal">
      <div class="modal-content">
        <button class="close-btn" onclick="closeModal()">&times;</button>
        <h2>Add New Order</h2>
        <form action="/create-order" method="POST">
          <input type="email" name="email" placeholder="User Email" required />
          <input
            type="text"
            name="parcelType"
            placeholder="Product Type"
            required
          />
          <select id="shipment-status" name="shipment_status">
            <option value="clearance_delay">
              Clearance delay (includes International shipment release)
            </option>
            <option value="delivered_shipments">Delivered shipments</option>
            <option value="delivery_exception">Delivery exception</option>
            <option value="held_for_pickup">
              Held for pickup (includes Delivery option confirmed)
            </option>
            <option value="ipd_idf_prealert">IPD/IDF PreAlert</option>
            <option value="inbound_alert">Inbound Alert</option>
            <option value="incorrect_address">Incorrect address</option>
            <option value="intl_shipment_release">
              Int'l Shipment Release
            </option>
            <option value="list_of_shipments">List of shipments</option>
            <option value="returns_notifications">Returns Notifications</option>
            <option value="returns_summary_notifications">
              Returns Summary Notifications
            </option>
            <option value="tendered_to_fedex_summary">
              Tendered to FedEx Summary
            </option>
          </select>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
    </div>

    <script>
      const orderModal = document.getElementById("orderModal");

      document.querySelector(".btn-primary").onclick = function () {
        orderModal.style.display = "flex"; // Show modal
      };

      function closeModal() {
        orderModal.style.display = "none"; // Hide modal
      }

      // Optional: Close modal when clicking outside the modal content
      window.onclick = function (event) {
        if (event.target === orderModal) {
          closeModal();
        }
      };
    </script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
    <script>
      $(document).ready(function () {
        $("#shipment-status").select2({
          placeholder: "Select Shipment Status",
          allowClear: true,
        });
      });
    </script>
  </body>
</html>
