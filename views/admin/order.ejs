    <style>
      .btn {
        display: inline-block;
        font-weight: 400;
        line-height: 1.5;
        color: #555;
        text-align: center;
        vertical-align: middle;
        cursor: pointer;
        user-select: none;
        background-color: transparent;
        border: 1px solid transparent;
        font-size: 1.5rem;
        text-decoration: none;
        border-radius: 4px;
        transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out,
          border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
      }

      .btn-primary {
        color: white;
        margin-top: 10px;
        background-color: #ff3e41;
        border-color: #ff3e41;
      }

      .container {
        padding: 10px 20px;
      }

      button {
        margin-top: 10px;
        width: 100px !important;
        height: 40px !important;
      }

      .con {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Order Details</h1>
      <table>
        <tr>
          <th>Order ID</th>
          <td><%= order.id %></td>
        </tr>
        <tr>
          <th>User Email</th>
          <td><%= order.email %></td>
        </tr>
        <tr>
          <th>Product Type</th>
          <td><%= order.item %></td>
        </tr>
        <tr>
          <th>Status</th>
          <td><%= order.status || 'Pending' %></td>
        </tr>
        <tr>
          <th>Shipping Address</th>
          <td><%= order.shipping_address %></td>
        </tr>
        <tr>
          <th>Created At</th>
          <td><%= new Date(order.created_at).toLocaleString() %></td>
        </tr>
      </table>
      <div class="con">
        <a href="/admin/dashboard" class="btn btn-primary">Back to Orders</a>
        <button class="button edit-Modal">Edit</button>
      </div>
    </div>
    <div class="admin-modal" id="orderModal">
      <div class="modal-content">
        <button class="close-btn" onclick="closeModal()">&times;</button>
        <h2>Edit Tracking Details</h2>
        <form action="/admin/order/edit" method="POST">
          <input type="hidden" name="id" value="<%= order.id %>" required />
          <input
            type="email"
            name="email"
            placeholder="User Email"
            value="<%= order.email %>"
            required
          />
          <input
            type="text"
            name="item"
            placeholder="Product Type"
            value="<%= order.item %>"
            required
          />
          <input
            type="text"
            name="shipping_address"
            placeholder="Shipping address"
            value="<%= order.shipping_address %>"
            required
          />
          <input
            type="text"
            name="status"
            placeholder="status"
            value="<%= order.status %>"
            required
          />
